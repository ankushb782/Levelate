<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:id="@+id/rlCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dim_12">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appBar"

                android:layout_marginBottom="@dimen/dim_12"
                android:fontFamily="@font/mulimedium"
                android:letterSpacing="0.1"
                android:gravity="center_horizontal"
                android:text="@string/weekly_mindset_task"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_12"
                android:background="@drawable/btn_round_border"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulisemibold"
                        android:layout_margin="@dimen/dim_12"
                        android:justificationMode="inter_word"
                        android:text="Week-1"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dim_0.5"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dim_4"
                    android:layout_marginEnd="@dimen/dim_4"
                    android:background="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulisemibold"
                        android:layout_margin="@dimen/dim_12"
                        android:justificationMode="inter_word"
                        android:text="Day-1"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dim_0.5"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dim_4"
                    android:layout_marginEnd="@dimen/dim_4"
                    android:background="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dim_12"
                        android:fontFamily="@font/mulisemibold"
                        android:gravity="center_horizontal"
                        android:justificationMode="inter_word"
                        android:text="Task-1"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/card_view_image"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mindset_task_banner" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulisemibold"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dim_6"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dim_12"
                android:text="@string/heading_task_name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulilight"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:text="@string/lorem"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:lineSpacingExtra="@dimen/dim_6"
                android:padding="@dimen/dim_8"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dim_12"
                android:text="@string/heading_duration"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size14" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/mulisemibold"
                android:paddingStart="@dimen/dim_8"
                android:paddingEnd="@dimen/dim_8"
                android:text="@string/btn_start_text"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dim_12"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size14"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                 />

            <RelativeLayout
                android:id="@+id/rlProgress"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">


            <ProgressBar
                android:id="@+id/progressBarCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dim_150"
                android:layout_height="@dimen/dim_150"
                android:background="@drawable/timer_circle_dark"
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:max="100"
                android:layoutDirection="ltr"
                android:progress="10"
                android:progressDrawable="@drawable/timer_circle"
                android:rotation="-90" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulisemibold"
                android:text="00:01:00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size16" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>