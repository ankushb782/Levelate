<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_12"
            android:background="@drawable/et_border_fill_accent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_gravity="center"
                    android:padding="@dimen/dim_8"
                    android:src="@drawable/face2"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="@dimen/dim_2" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dim_1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim_4"
                android:layout_marginEnd="@dimen/dim_4"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_12"
                    android:fontFamily="@font/mulilight"
                    android:justificationMode="inter_word"
                    android:text="Abc"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dim_1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim_4"
                android:layout_marginEnd="@dimen/dim_4"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_12"
                    android:fontFamily="@font/mulilight"
                    android:justificationMode="inter_word"
                    android:text="200"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dim_1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim_4"
                android:layout_marginEnd="@dimen/dim_4"
                android:background="@color/colorWhite" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivRank"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_gravity="center"
                    android:padding="@dimen/dim_8"
                    android:src="@drawable/medal1"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="@dimen/dim_0" />
            </LinearLayout>


        </LinearLayout>




</LinearLayout>