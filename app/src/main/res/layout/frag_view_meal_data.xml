<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4"
        android:background="@color/colorAccent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/llHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dim_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulibold"
                android:justificationMode="inter_word"
                android:text="@string/heading_moderate"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size14" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llHeading1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccentLight"
            android:gravity="center"
            android:padding="@dimen/dim_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulibold"
                android:justificationMode="inter_word"
                android:text="@string/heading_high"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size14" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_margin="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_12"
                android:layout_marginBottom="@dimen/dim_12"
                android:fontFamily="@font/mulimedium"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:text="Meal 1"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_round_normal_white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChallenge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="@string/heading_meal1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvImage"
                        android:layout_width="@dimen/dim_50"
                        android:layout_height="@dimen/dim_50"
                        android:layout_margin="@dimen/dim_8"
                        android:layout_toEndOf="@+id/tvChallenge"
                        app:cardCornerRadius="@dimen/dim_12"
                        app:cardElevation="10dp">


                        <ImageView
                            android:id="@+id/card_view_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/meal_banner" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_border_fill_grey"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_round_normal_white"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_12">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="@string/heading_meal1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dim_50"
                        android:layout_height="@dimen/dim_50"
                        android:layout_margin="@dimen/dim_8"
                        android:layout_toEndOf="@+id/tvChallenge"
                        app:cardCornerRadius="@dimen/dim_12"
                        app:cardElevation="10dp">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/meal_banner" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_border_fill_grey"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_round_normal_white"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_12">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="@string/heading_meal1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dim_50"
                        android:layout_height="@dimen/dim_50"
                        android:layout_margin="@dimen/dim_8"
                        android:layout_toEndOf="@+id/tvChallenge"
                        app:cardCornerRadius="@dimen/dim_12"
                        app:cardElevation="10dp">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/meal_banner" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_border_fill_grey"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_24"
                android:layout_marginBottom="@dimen/dim_12"
                android:fontFamily="@font/mulimedium"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:text="Meal 2"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size16" />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_round_normal_white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="@string/heading_meal1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dim_50"

                        android:layout_height="@dimen/dim_50"
                        android:layout_margin="@dimen/dim_8"
                        android:layout_toEndOf="@+id/tvChallenge"
                        app:cardCornerRadius="@dimen/dim_12"
                        app:cardElevation="10dp">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/meal_banner" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_border_fill_grey"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/mulilight"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_24"
                android:layout_gravity="bottom"
                android:fontFamily="@font/mulimedium"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:text="Nutrition Facts (per serving)"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size16" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulilight"
                    android:gravity="center"
                    android:text="Calories"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulilight"
                    android:layout_alignParentEnd="true"
                    android:lineSpacingExtra="@dimen/dim_6"
                    android:text="1786g"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulilight"
                    android:gravity="center"
                    android:text="Carbohydrates"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/mulilight"
                    android:text="180g"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulilight"
                    android:gravity="center"
                    android:text="Protein"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/mulilight"
                    android:text="116g"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulilight"
                    android:gravity="center"
                    android:text="Fat"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulilight"
                    android:layout_alignParentEnd="true"
                    android:text="47g"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />


            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>