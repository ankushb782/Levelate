<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dim_32">

    <RelativeLayout
        android:id="@+id/rlCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_12"
            android:layout_centerVertical="true"
            android:fontFamily="@font/mulimedium"
            android:justificationMode="inter_word"
            android:text="@string/recipe"
            android:textAllCaps="true"
            android:letterSpacing="0.03"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/universal_text_size16" />


        <RelativeLayout
            android:id="@+id/myOwnMealPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dim_12"
            android:paddingEnd="@dimen/dim_12"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_border_round"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawablePadding="@dimen/dim_12"
                android:fontFamily="@font/mulimedium"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dim_6"
                android:paddingStart="@dimen/dim_12"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_6"
                android:paddingTop="@dimen/dim_6"
                android:text="@string/heading_filter_by"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size16" />

        </RelativeLayout>

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/dim_12"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_arrow_left"
        android:padding="@dimen/dim_4"
        android:layout_marginTop="8dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/circle_small_accent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:padding="@dimen/dim_4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_small_accent"
        android:layout_height="wrap_content"/>
</RelativeLayout>



</LinearLayout>