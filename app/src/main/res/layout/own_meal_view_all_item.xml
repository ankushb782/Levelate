<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dim_100"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/dim_100"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="7dp"
        card_view:cardMaxElevation="0dp">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cvImage"
                android:layout_width="@dimen/dim_100"
                android:layout_height="@dimen/dim_100"
                android:paddingRight="8dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/big_thumbnail"
                 />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_30"
                android:layout_centerInParent="true"
                android:layout_below="@+id/cvImage"
                android:layout_marginBottom="@dimen/dim_8"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_8"
                android:layout_marginRight="@dimen/dim_8"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/mulisemibold"
                android:text="@string/btn_view_text"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size14"
                android:visibility="visible"  />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
