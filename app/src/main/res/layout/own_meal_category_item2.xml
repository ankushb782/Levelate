<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_4"
            android:layout_marginEnd="@dimen/dim_4"
            android:layout_marginTop="@dimen/dim_4"
            android:layout_marginBottom="@dimen/dim_8"
            android:fontFamily="@font/mulisemibold"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:text="@string/heading_breakfast"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/universal_text_size16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_4"
            android:layout_marginLeft="@dimen/dim_4"
            android:layout_marginTop="@dimen/dim_8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
               >

                <ImageView
                    android:id="@+id/cvImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/small_thumbnail" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/tvItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mulisemibold"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="@dimen/dim_6"
                    android:text="Item One"
                    android:minWidth="@dimen/dim_90"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:padding="@dimen/dim_4"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/image_circle"
                    android:src="@drawable/ic_add" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_4"
            android:layout_marginLeft="@dimen/dim_4"
            android:layout_marginTop="@dimen/dim_8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/small_thumbnail" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mulisemibold"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="@dimen/dim_6"
                    android:text="Item Two"
                    android:minWidth="@dimen/dim_90"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:padding="@dimen/dim_4"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/image_circle"
                    android:src="@drawable/ic_add" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_4"
            android:layout_marginLeft="@dimen/dim_4"
            android:layout_marginTop="@dimen/dim_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tvLastitem"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/small_thumbnail" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvLastitem"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mulisemibold"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="@dimen/dim_6"
                    android:text="Item Three"
                    android:minWidth="@dimen/dim_90"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/llText"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                >

                <ImageView
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:padding="@dimen/dim_4"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/image_circle"
                    android:src="@drawable/ic_add" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDinnerView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="@dimen/dim_8"
                android:layout_marginRight="@dimen/dim_8"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/mulisemibold"
                android:paddingStart="@dimen/dim_8"
                android:paddingEnd="@dimen/dim_8"
                android:text="@string/view_all"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size14"
                android:visibility="visible" />
        </RelativeLayout>





    </LinearLayout>


</RelativeLayout>