<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dim_32">






    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rlCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_12"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBar"
                    android:layout_marginBottom="@dimen/dim_12"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/mulimedium"
                    android:gravity="center_horizontal"
                    android:justificationMode="inter_word"
                    android:text="@string/home_based_challenge"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size18" />



                <TextView
                    android:id="@+id/tvChallengeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBar"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginBottom="@dimen/dim_12"
                    android:fontFamily="@font/mulimedium"
                    android:gravity="center_horizontal"
                    android:justificationMode="inter_word"
                    android:text="@string/heading_challenge_name"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/universal_text_size22" />

                <RelativeLayout
                    android:id="@+id/rlChallenges1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/btn_round_green"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivCustomMacros"
                        android:layout_width="@dimen/dim_32"
                        android:layout_height="@dimen/dim_32"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/dim_6"
                        android:src="@drawable/clapping_icon"
                        android:tint="@color/colorPrimary" />


                    <TextView
                        android:id="@+id/tvChallenge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ivCustomMacros"
                        android:layout_toRightOf="@+id/ivCustomMacros"
                        android:fontFamily="@font/mulilight"
                        android:padding="@dimen/dim_6"
                        android:text="@string/heading_congrats"
                        android:textColor="@color/green"
                        android:textSize="@dimen/universal_text_size13" />


                </RelativeLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_8"

                android:layout_marginTop="@dimen/dim_24">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulimedium"
                        android:gravity="center_horizontal"
                        android:justificationMode="inter_word"
                        android:text="@string/attempt_one"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dim_32"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_border_without_fill"
                        android:orientation="vertical"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/appBar"
                                android:layout_gravity="center"
                                android:fontFamily="@font/mulilight"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:justificationMode="inter_word"
                                android:text="10:11m"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="32sp" />

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulimedium"
                        android:gravity="center_horizontal"
                        android:justificationMode="inter_word"
                        android:text="@string/attempt_two"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16" />

                    <LinearLayout
                        android:id="@+id/llGymBased"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_border_without_fill"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dim_32">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvCount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/mulilight"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:justificationMode="inter_word"
                                android:text="9:58m"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="32sp" />

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmitTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="@dimen/dim_18"
                android:background="@drawable/et_border_fill_accent"
                android:fontFamily="@font/mulisemibold"
                android:paddingStart="@dimen/dim_8"
                android:paddingEnd="@dimen/dim_8"
                android:text="@string/submit_to_leaderboard"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size14"
                android:visibility="visible" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>