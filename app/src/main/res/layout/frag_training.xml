<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dim_32">


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulimedium"
            android:letterSpacing="0.1"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:text="@string/menu_training"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/universal_text_size18" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cvChallenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_32"
            app:cardBackgroundColor="@color/colorgreen"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_60"
                android:layout_gravity="bottom"
                android:background="@drawable/dashboard_box_dots"
                android:scaleType="fitXY"
                android:tint="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCustomMacros"
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="@dimen/dim_60"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/challenge_icon"
                        android:tint="@color/colorPrimary"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulisemibold"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:layout_toEndOf="@+id/ivCustomMacros"
                        android:text="@string/heading_challenges"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16"
                        android:layout_toRightOf="@+id/ivCustomMacros" />


                </RelativeLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_15"
                android:layout_gravity="bottom|end"
                android:scaleType="fitEnd"
                android:src="@drawable/dashboard_corner"
                android:tint="@color/colorPrimary" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorgreen"
            android:clickable="true"
            android:layout_marginTop="@dimen/dim_12"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_60"
                android:layout_gravity="bottom"
                android:background="@drawable/dashboard_box_dots"
                android:scaleType="fitXY"
                android:tint="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivMyMeal"
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="@dimen/dim_60"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/leaderboard_icon"
                        android:tint="@color/colorPrimary"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulisemibold"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:layout_toEndOf="@+id/ivMyMeal"
                        android:text="@string/leaderboard"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16"
                        android:layout_toRightOf="@+id/ivMyMeal" />


                </RelativeLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_15"
                android:layout_gravity="bottom|end"
                android:scaleType="fitEnd"
                android:src="@drawable/dashboard_corner"
                android:tint="@color/colorPrimary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_12"
            app:cardBackgroundColor="@color/colorgreen"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_60"
                android:layout_gravity="bottom"
                android:background="@drawable/dashboard_box_dots"
                android:scaleType="fitXY"
                android:tint="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivRecipe"
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="@dimen/dim_60"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/dashboard_step"
                        android:tint="@color/colorPrimary"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulisemibold"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:layout_toEndOf="@+id/ivRecipe"
                        android:text="@string/steps_target"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/universal_text_size16"
                        android:layout_toRightOf="@+id/ivRecipe" />


                </RelativeLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_15"
                android:layout_gravity="bottom|end"
                android:scaleType="fitEnd"
                android:src="@drawable/dashboard_corner"
                android:tint="@color/colorPrimary" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</RelativeLayout>