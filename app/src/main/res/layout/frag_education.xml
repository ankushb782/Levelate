<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dim_32">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulimedium"
        android:letterSpacing="0.1"
        android:gravity="center_horizontal"
        android:justificationMode="inter_word"
        android:text="@string/mind_set"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/universal_text_size18" />

    <RelativeLayout
        android:id="@+id/rlCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_18"
        android:layout_marginBottom="@dimen/dim_12">

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulimedium"
            android:layout_centerVertical="true"
            android:justificationMode="inter_word"
            android:text="@string/education"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/universal_text_size16" />



        <RelativeLayout
            android:id="@+id/myOwnMealPlan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:background="@drawable/et_border_fill_accent"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:fontFamily="@font/mulimedium"
                android:lineSpacingExtra="@dimen/dim_6"
                android:padding="@dimen/dim_8"
                android:text="Filter By"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/universal_text_size14" />

            <ImageView
                android:layout_width="@dimen/dim_25"
                android:layout_height="@dimen/dim_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim_16"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
        </RelativeLayout>

    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

</RelativeLayout>
</LinearLayout>